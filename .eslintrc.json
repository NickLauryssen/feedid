{
  "root": true,
  "env": {
    "es6": true,
    "jasmine": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "globals": {
    "$": false,
    "angular": true
  },
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": 0,
    "space-before-blocks": [
      "error",
      "always"
    ]
  }
}
